<?xml version="1.0" encoding="utf-8"?>
	    
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
			<solid android:color="@color/background_green" />
			<stroke android:color="@color/chalk"
				android:width="2dp" />
		</shape>
    </item>
    
